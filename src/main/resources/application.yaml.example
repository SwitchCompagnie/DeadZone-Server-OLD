# Ktor Server Configuration
# Copy this file to application.yaml and configure with your settings

ktor:
  development: false
  deployment:
    port: 8080
    host: 0.0.0.0
  application:
    modules:
      - dev.deadzone.ApplicationKt.module

# Logger
# level: 0 = DEBUG, 1 = INFO, 2 = WARN, 3 = ERROR
logger:
  level: "0"
  colorful: true

# Database MariaDB
maria:
  url: "jdbc:mariadb://localhost:3306/deadzone"
  user: "root"
  password: ""

# Game Server
game:
  host: "127.0.0.1"
  port: 7777
  enableAdmin: false

# Broadcast
broadcast:
  enabled: true
  host: "0.0.0.0"
  port: 2121
  enablePolicyServer: true

# Policy Server
# Note: Port 843 requires administrator/root privileges on most systems
policy:
  host: "0.0.0.0"
  port: 843
